package objectcollection;

import java.util.HashSet;
import java.util.LinkedList;
import java.util.TreeMap;

import object.Student;
import object.Subject;

public class StudentSubject {
	private Student student;
	private HashSet<Subject> listSubject;;
	private TreeMap<Student, HashSet<Subject>> mapStudent = new TreeMap<Student, HashSet<Subject>>();
	
	public StudentSubject() {
		this.student = new Student();
		this.listSubject = new HashSet<Subject>();
		this.mapStudent = new TreeMap<Student, HashSet<Subject>>();
	}

	public StudentSubject(Student student, HashSet<Subject> listSubject) {
		this.student = student;
		this.listSubject = listSubject;
		this.mapStudent.put(student, listSubject);
	}

	public Student getStudent() {
		return student;
	}

	public void setStudent(Student student) {
		this.student = student;
	}

	public HashSet<Subject> getListSubject() {
		return listSubject;
	}

	public void setListSubject(HashSet<Subject> listSubject) {
		this.listSubject = listSubject;
	}

	public TreeMap<Student, HashSet<Subject>> getMapStudent() {
		return mapStudent;
	}

	public void setMapStudent(TreeMap<Student, HashSet<Subject>> mapStudent) {
		this.mapStudent = mapStudent;
	}

	@Override
	public String toString() {
		String resuft = "";
		for (Subject subject: this.listSubject) {
			resuft += this.student.toString() + subject+", ";
		}
		return resuft;
	}
	
}
