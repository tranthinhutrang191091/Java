package daicent.com;

import java.util.Arrays;

public class Main {
	public static void main(String[] args) {
		String s="Xin chào các bạn, tôi là trang";
		System.out.println("s = "+s);
		String[] a=s.split(" ");
		System.out.println("a = "+Arrays.toString(a));
		String[] b=s.split(",");
		System.out.println("b = "+Arrays.toString(b));
		
		
	}
}
