package com.daicent;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

/*
 * List là một interface trong java. 
 * Nó chứa các phương thức để chèn và xóa các phần tử dựa trên chỉ số index
 * 
 */
public class ListCollection {
	public static void main(String[] args) {
		// Khởi tạo đối tượng List kiểu dữ liệu String
		System.out.println("\t1. List");
		List<String> list = new ArrayList<String>();
		list.add("Java");// chèn phần tử vào cuối list
		list.add("C++");
		list.add("PHP");
		list.add(1, "Python");// chèn các phần tử vào list tại chỉ số index
		// show list
		System.out.print("list: ");
		for (String s : list) {
			System.out.print(s+"\t");
		}
		// lấy ra phần tử ở index
		System.out.println("\nPhần tử có index =2 là list.get(2): " + list.get(2));
		// gán phần tử cho vị trí chỉ định index
		list.set(1, "C#");
		for (String s : list) {
			System.out.println(s);
		}

		// Khởi tạo đối tượng ArrayList bằng cách truyền array vào list
		System.out.println("\t2. ArrayList");
		// create new array
        String[] arr = { "Java", "C++", "PHP", "Python" };
        // convert array to List
        List<String> arrayList = Arrays.asList(arr);
        // show list
        for (String s : arrayList) {
            System.out.println(s);
        }

	}
}
